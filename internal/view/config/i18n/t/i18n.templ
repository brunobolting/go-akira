package t

import (
	"context"
	"github.com/invopop/ctxi18n/i18n"
)

templ T(key string, args ...any) {
	{ i18n.T(ctx, key, args...) }
}

templ N(key string, n int, args ...any) {
	{ i18n.N(ctx, key, n, args...) }
}

func PreferredLocale(ctx context.Context) string {
	return i18n.GetLocale(ctx).Code().String()
}
